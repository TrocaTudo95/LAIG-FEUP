      </MATERIAL>


</MATERIALS>

<ANIMATIONS>

</ANIMATIONS>


<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>

    <ROOT id="root" />

    <!-- The root node -->

    <NODE id="root">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="tabuleiro"/>
        </DESCENDANTS>

    </NODE>

    <!-- chao -->
     <NODE id="tabuleiro">
        <MATERIAL id="null" />
